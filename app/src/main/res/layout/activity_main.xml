<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <include layout="@layout/toolbar_product_list"/>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">





            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/item_image"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:clipToPadding="false">
                </ImageView>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textColor="@color/txt_color"
                    android:fontFamily="@font/roboto_medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 1450"
                    android:textColor="@color/txt_color"
                    android:fontFamily="@font/roboto_medium"/>

            </LinearLayout>
            <TextView
                android:id="@+id/item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum is simply dummy text of the prnting and typesetting industry.Lorem Ipsum is simply dummy text of the prnting and typesetting industry.Lorem Ipsum is simply dummy text of the prnting and typesetting industry."
                android:textSize="12sp"
                android:lineSpacingExtra="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#8f909e"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="10dp">

                <Button
                    android:id="@+id/layout_addTo_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Add To Cart"
                    android:textAllCaps="false"
                    android:paddingRight="15sp"
                    android:paddingLeft="15sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_red_rect"
                    android:layout_marginStart="5dp" />

                <LinearLayout
                    android:id="@+id/layout_addTo_favourite"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:elevation="4dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/white_home_rect"
                    android:layout_marginStart="20dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_heart_light"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size"
                    android:textSize="15sp"
                    android:textColor="@color/txt_color"
                    android:fontFamily="@font/roboto_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linear1"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/size_rect"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#8f909e"
                            android:textSize="12.7sp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="XS"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear2"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/size_rect"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#8f909e"
                            android:textSize="12.7sp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="S"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linear3"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/size_rect"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#8f909e"
                            android:textSize="12.7sp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="M"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear4"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/size_rect"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#8f909e"
                            android:textSize="12.7sp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="L"

                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linear5"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/size_rect"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#8f909e"
                            android:textSize="12.7sp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="XL"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linear6"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/size_rect"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#8f909e"
                            android:textSize="12.7sp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="XXL"

                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colors"
                    android:textSize="15sp"
                    android:textColor="@color/txt_color"
                    android:fontFamily="@font/roboto_medium" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">


                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/linear_red"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:orientation="horizontal"
                            android:background="@drawable/red_circle"/>


                        <ImageView
                            android:id="@+id/red_tick"
                            android:visibility="gone"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:src="@drawable/ic_tick"
                            android:layout_gravity="center"/>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp">


                        <LinearLayout
                            android:id="@+id/linear_green"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:orientation="horizontal"
                            android:background="@drawable/green_circle"/>
                        <ImageView
                            android:id="@+id/green_tick"
                            android:visibility="gone"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:src="@drawable/ic_tick"
                            android:layout_gravity="center"/>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp">



                        <LinearLayout
                            android:id="@+id/linear_black"
                            android:layout_width="30dp"
                            android:layout_height="30dp"

                            android:orientation="horizontal"
                            android:background="@drawable/black_circle"/>

                        <ImageView
                            android:id="@+id/black_tick"
                            android:visibility="gone"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:src="@drawable/ic_tick"
                            android:layout_gravity="center"/>

                    </FrameLayout>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews"
                    android:textSize="15sp"
                    android:textColor="@color/txt_color"
                    android:fontFamily="@font/roboto_medium" />



                <view class="androidx.appcompat.app.AlertController$RecycleListView"
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false"/>


            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>
